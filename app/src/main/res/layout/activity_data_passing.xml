<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161616"
    android:orientation="vertical"
    android:paddingTop="10dp"
    tools:context=".DataPassing">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="40dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/versionlogo"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Version Logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/faustina_light"
            android:text="Version"
            android:textColor="#ED9F0D"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>


    <TextView
        android:id="@+id/nametView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="5dp"
        android:text="Name"
        android:textColor="#CACACA"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/etxtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:hint="Enter your name"
        android:textColor="#D9D9D9"
        android:textColorHint="#DB4D4D4D"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/AddresstView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="5dp"
        android:text="Address"
        android:textColor="#CACACA"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/etxtAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:hint="Enter Address"
        android:textColor="#D9D9D9"
        android:textColorHint="#DB4D4D4D"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <DatePicker
        android:id="@+id/dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:calendarTextColor="#ffffff"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:background="#D9D9D9"/>


    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#EFA00D"
        android:textColor="#161616"
        android:textStyle="bold"
        android:text="Submit" />

</LinearLayout>